---
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScriptSender from '../components/script-sender.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---
const pageTitle = "Home Page";
---
<BaseLayout>
  <h2>My awesome blog subtitle</h2>
</BaseLayout>
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Astro Home</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
        color: #333;
      }

      h1 {
        color: #2c3e50;
      }

      p {
        font-size: 1.1rem;
      }

      nav {
        margin-top: 20px;
      }

      ul {
        list-style-type: none;
        padding: 0;
      }

      li {
        display: inline;
        margin-right: 15px;
      }

      a {
        text-decoration: none;
        color: #3498db;
        font-weight: bold;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>Welcome to My Astro Site</h1>
    <p>This is a super basic homepage with not a lot of style yet, just some basic coloring to implement "/styles".</p>

    <nav>
		<ul>
      <li><a href="/my-site">Home</a></li>
		  <li><a href="/my-site/about">About Page</a></li>
      <li><a href="/my-site/Community">Community Page</a></li>

		</ul>
	  </nav>	  
  </body>
</html>